{
  "name": "pacman-game",
  "version": "1.0.2",
  "description": "Pacman game",
  "license": "MIT",
  "main": "electron/electron.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": {
    "name": "Kamil Hajdula"
  },
  "devDependencies": {
    "electron": "^27.0.4",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "icon": "assets/icons/icon_512.icns",
    "productName": "PacMan",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "dist"
    }
  }
}
